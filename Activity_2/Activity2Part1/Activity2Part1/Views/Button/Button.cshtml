@model List < Activity2Part1.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Button</title>
        <style>
            div.button-container {
                display: flex;
            }

                div.button-container button {
                    margin: 1rem;
                }
        </style>
        </head>
        <body>
            <div>
                @Html.Label("Welcome", "Welcome to Razor", new { style = "text: align: center; font-size: 24px; font-weight: bold; font-family: Arial;" })
                <br />
                @Html.Label("Message", "Play with Buttons: ", new { style = "text: align: left; font-size: 18px; font-weight: bold; font-family: Arial;" })
                <br />
                @using (Html.BeginForm("OnButtonClick", "Button", FormMethod.Post))
                {
                    <div class="button-container">
                        <button type="submit" name="mine" value="1">
                            @if (Model[0].State)
                            {<img src="/Images/On.png" /> }
                            else
                            { <img src="/Images/Off.png" />}
                        </button>
                        <br />
                        <button type="submit" name="mine" value="2">
                            @if (Model[1].State)
                            {<img src="/Images/On.png" /> }
                            else
                            { <img src="/Images/Off.png" />}
                        </button>

                    </div>

                }

            </div>
        </body>
</html>
